<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>Llamadas</h2>
          <ol>
            <li><%= link_to 'Inicio', root_path %></li>
            <li>Llamadas</li>
          </ol>
        </div>
      </div>
</section><!-- End Breadcrumbs -->   
 
<!-- ======= Contact Section ======= -->   
<section id="contact" class="contact">
  <div class="container">
    <div class="row mt-5 justify-content-center" data-aos="fade-up">
      <div class="col-lg-10">
        <form role="form" class="php-email-form">
          <h3>Listado de llamadas</h3>
					<div class="row">
          <div class="mb-3">  
          <%= form_with method: :get do |form| %>  
              <%= form.text_field :query_text, placeholder: "buscar", value: params[:query_text], class:"form-control me-2" %>
              <%= form.submit "buscar", class:"btn btn-secondary" %>
            <% end %>
        </div>
        <% if @calls.count > 0 %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Fecha</th>
                <th>Motivo</th>
                <th>Ver</th>
              </tr>
            </thead>  
            <% @calls.each do |call| %> 
            <tbody>
              <tr>
                <td><%= call.user.email %></td>
                <td><%= call.client.name %></td>
                <td><%= call.created_at %></td>
                <td><%= call.reason.name %></td>
                <td><%= link_to "Detalle", call %></td>
              </tr> 
            </tbody> 
            <% end %>  
            </table>    
          </div> 
        </form>
      </div>
      <div class="class-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
      <% else %>
        <h1>No hay resultados con esa busqueda</h1>  
      <% end %>   
      <%= link_to "New call", new_call_path, clase:'btn' %>
    </div>
  </div>  
</section><!-- End Contact Section -->
