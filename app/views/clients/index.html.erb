<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>Clientes</h2>
          <ol>
            <li><%= link_to 'Inicio', root_path %></li>
            <li>Clientes</li>
          </ol>
        </div>
      </div>
</section><!-- End Breadcrumbs -->   
 
<!-- ======= Contact Section ======= -->   
<section id="contact" class="contact">
  <div class="container">
    <div class="row mt-5 justify-content-center" data-aos="fade-up">
      <div class="col-lg-10">
        <form role="form" class="php-email-form">
          <h3>Listado de Clientes</h3>
					<div class="row">
          <div class="mb-3">  
            <%= form_with method: :get do |form| %>  
              <%= form.text_field :query_text, placeholder: "buscar", value: params[:query_text], class:"form-control me-2" %>
              <%= form.submit "buscar", class:"btn btn-secondary" %>
            <% end %>
          </div>
          
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Imagen</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Ver</th>
                <th>Agregar</th>
              </tr>
            </thead>  
              <% @clients.each do |client| %> 
                <tbody>
                  <tr>
                    <td>
                      <% if client.image.present? %>
                        <%= image_tag client.image.url %>
                      <% end %>
                    </td>
                    <td><%= client.email %></td>
                    <td><%= client.name %></td>
                    <td><%= client.phone %></td>
                    <td>
                        <%= link_to client do %>
                          <i class="fa-solid fa-eye" style="color: #044ac3;"></i>
                        <% end %> 
                    </td>
                    <td>
                        <%= link_to new_call_path do %>
                          <i class="fa-duotone fa-phone-volume" style="--fa-primary-color: #0772e4; --fa-secondary-color: #0772e4;"></i>
                        <% end %> 
                    </td>
                  </tr> 
                </tbody> 
              <% end %>  
          </table>    
          </div> 
        </form>
      </div>
      <div class="class-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
        
      <%= link_to "New cliente", new_client_path, clase:'btn' %>
    </div>
  </div>  
</section><!-- End Contact Section -->
